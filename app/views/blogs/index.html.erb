<h1>ブログ一覧</h1>


<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>ユーザー</th>
    <%=content_tag(:th, notice, class: "notice")%>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.user.name%></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <%if blog.user.id == current_user.id%>
      <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id) %></td>
      <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: {confirm: '本当に削除しますか？'}%></td>
    <%end%>
  </tr>
<% end %>
</table>


<style>
h1{
  padding:20px;
  font-size: 20px;
}
td{
  padding: 20px;
  border:solid 2px #808080;
}
tr{
  padding: 20px;
  border:solid 2px #808080;
}
.notice{
  color: #ff0000;
}
</style>